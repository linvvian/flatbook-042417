<div class="well">
  <%= form_for @event do |f| %>
    <div class="form-event" style="height:300px; width:300px;">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %><br>
      <%= f.label :date %>
      <%= f.text_field :date, class:"form-control" %><br>
      <%= f.label :description %>
      <%= f.text_field :description, class:"form-control" %><br>
      <%= f.submit class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
