<div style="font-family: 'Metamorphous', cursive;">
  <h1>Events <small>discover your flatiron events</small></h1>
</div>

<div class="well">
  <%= link_to "New Event", new_event_path, class:"btn btn-success" %>
  <% if !@events.empty? %>
    <hr>
  <% end %>
  <% @events.each do |e| %>
    <div class="list-group">
      <h1><%= link_to "#{e.name.capitalize} - #{e.pretty_date} at #{e.pretty_time}", event_path(e), class:"list-group-item" %>
      </h1>
    </div>
  <% end %>
</div>
