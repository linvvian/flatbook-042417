<ul class="nav nav-tabs">
  <li><a href="#friends" data-toggle="tab">Friends</a></li>
  <li><a href="#pending" data-toggle="tab">Pending</a></li>
  <li><a href="#outgoing" data-toggle="tab">Outgoing</a></li>
</ul>
<br>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="friends">
    <table class="table table-striped">
      <% current_user.my_friends.each do |friend_id| %>
        <tr>
          <td><%= link_to User.find(friend_id).name, user_path(friend_id) %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="tab-pane fade" id="pending">
    <table class="table table-striped">
    <% current_user.my_pending_friends.each do |friend_id| %>
      <tr>
        <td><%= link_to User.find(friend_id).name, user_path(friend_id) %></td>
        <td><%= link_to "Confirm Request", friendship_path(Friendship.find_by(user_id: friend_id, friend_id: current_user.id)), method: :patch %></td>
        <td><%= link_to "Delete Request", friendship_path(Friendship.find_by(user_id: friend_id, friend_id: current_user.id)), method: :delete %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <div class="tab-pane fade" id="outgoing">
    <table class="table table-striped">
    <% current_user.my_outgoing_friend_pends.each do |friend_id| %>
      <tr>
        <td><%= link_to User.find(friend_id).name, user_path(friend_id) %></td>
        <td><%= link_to "Delete Request", friendship_path(Friendship.find_by(user_id: current_user.id, friend_id: friend_id)), method: :delete %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
