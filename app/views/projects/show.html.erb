<div class="well">
  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>
  <div id="buttons" class="btn-gorup pull-right">
    <% if project_member || current_user.admin %>
      <%= link_to "Edit", edit_project_path, class:"btn btn-warning" %>
      &nbsp;
      <%= link_to "Delete", project_path, method: "delete", class:"btn btn-danger" %>
    <% end %>
  </div>
  <%= link_to "Back", projects_path, class:"btn btn-primary" %>
</div>

<hr>

<div class="well">
  <h2>Memebers:</h2>
  <p>
    <ol>
      <% @project.users.collect do |u| %>
        <li><%= link_to u.name, user_path(u) %></li>
      <% end%>
    </ol>
  </p>

  <h3><%= link_to "#{image_tag("http://www.freeiconspng.com/uploads/github-icon-1.png", size:"40x40")}#{@project.github}".html_safe, @project.github %></h3>

</div>
<br>

<%= render "comments/show" %>
