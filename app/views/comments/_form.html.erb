<div class="row">
  <div class="col-sm-11">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>New Comment</strong>
      </div>
      <div class="panel-body">
        <%= form_tag "#{params[:id]}/add_comment", method: "post" do %>
          <%= hidden_field_tag :'[page_type]', page.class %>
          <%= hidden_field_tag :'[page_id]', page.id %>
          <%= hidden_field_tag :'[comment][author_id]', current_user.id %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="row">
            <div class="col-sm-9">
              <%= text_area_tag :'[comment][content]', nil, style: "width: 100%" %>
            </div>
            <div class="col-sm-3">
              <%= submit_tag "Add Comment",  class: "btn btn-success pull-right" %>
            </div>
          </div>
        <% end %>
      </div><!-- /panel-body -->
    </div><!-- /panel panel-default -->
  </div><!-- /col-sm-5 -->
</div><!-- /row -->
