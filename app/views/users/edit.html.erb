<h1>Update Info</h1>
<div>
  <%= render 'form', user: @user do |f| %>
    <%= f.label :github_account %>
    <%= f.text_field :github, class:"form-control"  %>
    <%= f.label :image_url %>
    <%= f.text_field :image, class:"form-control" %>

    <% if is_admin? %>
    <%= f.label :cohort_start_date %>
    <%= f.collection_select(:cohort_id, @cohorts, :id, :start_date, prompt: true) %>
    <br>
      <%= f.label :admin %>
      <%= f.check_box :admin  %>
    <% end %>

  <% end %>
</div>
