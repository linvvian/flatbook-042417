<div>
  <% if current_user %>
    <div class="jumbotron" align="center">
      <h1>Welcome <%= current_user.name.capitalize %>!</h1>
      <p>...</p>
      <p><%= link_to "Learn more", current_user, class: "btn btn-primary btn-lg" %></p>
    </div>
  <% else %>
    <h1>Sign Up</h1>
    <%= form_tag login_path, method: :post do %>
      <div class="form-group">
      <%= text_field_tag :email, nil, placeholder: "email", class: "form-control" %>
      <%= password_field_tag :password, nil, placeholder: "password", class: "form-control" %>
      <%= submit_tag "Login", class: "btn btn-primary" %>
      </div>
    <% end %>
    <br><%= link_to "Sign Up", new_user_path, class: "btn btn-primary" %>
  <% end %>
</div>
