<div class="well">
  <%= form_for @group do |f| %>
    <div class="form-group" style="height:300px; width:300px;">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
      <%= f.label :description %>
      <%= f.text_field :description, class:"form-control" %><br>
      <%= f.submit class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
